generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Job {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  status      JobStatus @default(OPEN)

  location    String
  company     String

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([status])
  @@index([createdAt])
}

enum JobStatus {
  OPEN
  IN_PROGRESS
  CLOSED
}